<Window x:Class="Chat_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AllChat" Height="350" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        
        <StackPanel Orientation="Vertical" Margin="0, 20">
            <Label Content="Login" HorizontalAlignment="Center" FontSize="25" FontStyle="Normal" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="5, 10">
                <Label Content="User Name:" />
                <TextBox x:Name="tb_UserName" Width="190" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5, 10">
                <Label Content="Password:" />
                <PasswordBox x:Name="pb_Password" Width="190" Margin="10,0,0,0" HorizontalAlignment="Right"  />
            </StackPanel>
          
            <Button x:Name="btn_login" Content="Submit" Margin="0, 40"  Width="150" Height="30" Click="Button_Click"/>

        </StackPanel>
       
    </Grid>
</Window>
